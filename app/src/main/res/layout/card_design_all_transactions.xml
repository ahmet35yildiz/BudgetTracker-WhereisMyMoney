<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="allTransactionsObject"
            type="com.amttech.budgettracker_whereismymoney.data.entity.Transactions" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewAllTransactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:contentPadding="5dp">

            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewTDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{allTransactionsObject.transactionDate}"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewTCategory"
                    app:layout_constraintEnd_toStartOf="@+id/textViewTAmount"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/textViewTCategory"
                    app:layout_constraintTop_toTopOf="@+id/textViewTCategory" />

                <TextView
                    android:id="@+id/textViewTAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(allTransactionsObject.transactionAmount)}"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewTCategory"
                    app:layout_constraintEnd_toStartOf="@+id/imageButtonDelete"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/textViewTDate"
                    app:layout_constraintTop_toTopOf="@+id/textViewTCategory" />

                <TextView
                    android:id="@+id/textViewTCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{allTransactionsObject.transactionCategory}"
                    app:layout_constraintBottom_toTopOf="@+id/textViewTDescription"
                    app:layout_constraintEnd_toStartOf="@+id/textViewTDate"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewTDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{allTransactionsObject.transactionDescription}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textViewTCategory"
                    app:layout_constraintTop_toBottomOf="@+id/textViewTCategory" />

                <ImageButton
                    android:id="@+id/imageButtonDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/delete_vector" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>